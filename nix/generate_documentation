#!/usr/bin/env nix-shell
#!nix-shell -i sh -p nixdoc

cd "$(dirname "$0")"

cat <<EOF
# Nix API

<!-- This file has been generated by nix/generate_documentation. Update the
     documentation inside *.nix files and run the script again. -->

EOF

for file in *.nix; do
   nixdoc \
       --file "$file" \
       --category "" \
       --description "" \
       --prefix "lib" \
       --anchor-prefix "" \
       ;
done
